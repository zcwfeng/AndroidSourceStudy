<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/storage_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="存储" />

    <LinearLayout
        android:id="@+id/sqlite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contentprovider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sqlite"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sharepreference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contentprovider"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sharepreference"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/net"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/file"
        android:orientation="horizontal" >
    </LinearLayout>

</RelativeLayout>